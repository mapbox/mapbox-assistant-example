<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mia_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapbox.mapboxintegratedassistant.MiaActivity">

    <RelativeLayout
        android:id="@+id/rl_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#8C000000"
        android:focusableInTouchMode="true"
        android:translationZ="1dp"
        android:clipToPadding="true">

        <ImageView
            android:id="@+id/iv_clear_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:tint="#FFF"
            android:translationZ="2dp"
            android:src="@drawable/ic_clear"
            android:contentDescription="@string/clear_chat_button"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="15dp"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_chat_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/et_chat_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:backgroundTint="#00FFFFFF"
                android:hint="@string/ask_a_question"/>

            <ImageView
                android:id="@+id/iv_microphone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|end"
                android:padding="6dp"
                android:contentDescription="@string/mic_button"
                android:src="@drawable/ic_microphone"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="39.8282"
        mapbox:mapbox_cameraTargetLng="-98.5795"
        mapbox:mapbox_styleUrl="@string/mapbox_style_mapbox_streets"
        mapbox:mapbox_cameraTilt="20"
        mapbox:mapbox_cameraZoom="2"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/botSecondary"
        android:src="@drawable/ic_search"
        android:visibility="visible"
        android:tint="@color/fabIconColor"/>

</RelativeLayout>
